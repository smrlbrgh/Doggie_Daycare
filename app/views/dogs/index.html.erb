<h1>Listing dogs</h1>

<table class= "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Breed</th>
      <th>Dob</th>
      <th>Vet</th>
      <th>Vet phone</th>
      <th>In daycare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.owner.last_name %></td>
        <td><%= dog.breed.breed %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.vet %></td>
        <td><%= dog.vet_phone %></td>
        <td><%= dog.in_daycare %></td>
        <td><%= link_to 'Show', dog, class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path, class: "btn btn-success btn-xs" %>
