<%= form_for(@dog) do |f| %>
  <% if @dog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:
    "form-control", placeholder: "Dog's Name"%>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.all.order("last_name"), :id, :last_first, {prompt: "Select an owner"}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :breed_id %><br>
    <%= f.collection_select :breed_id, Breed.all.order("breed"), :id, :breed, {prompt: "Select a breed"}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :dob %><br>
    <%= f.date_select :dob, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :vet %><br>
    <%= f.text_field :vet, class: "form-control", placeholder: "Clinic Name" %>
  </div>
  <div class="field">
    <%= f.label :vet_phone %><br>
    <%= f.text_field :vet_phone, class:
    "form-control", placeholder: "985-555-5555" %>
  </div>
  <div class="field">
    <%= f.label :in_daycare %><br>
    <%= f.check_box :in_daycare %>
  </div>
  <div class="field">
   <%= f.label :avatar %><br>
   <%= f.file_field :avatar, class: "form-control" %>
 </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
